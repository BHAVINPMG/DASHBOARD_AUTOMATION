                "source.country",
                "source.if.index",
                "application",
                "source.port",
                "event.source",
                "destination.as",
                "destination.country",
                "user",
                "event.source.type",
                "event.severity",
                "event.category",
                "severity",
                "policy.id"
              ]
            }
          }
        }
      }
